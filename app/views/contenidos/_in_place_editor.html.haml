.in_place_editor_wrapper
  = content_tag :span, object.send(attribute).to_s.size > 0 ? object.send(attribute) : "-.-" , {:class=>'in_place_attribute'}
  - form_for object, {:id=>dom_id(object, attribute)}, :html=>{:style=>"display: none"} do |f|
    - f.inputs do
      = f.input attribute, options
    = submit_tag 'OK', :class=>'in_place_save'
    %input.in_place_cancel{ :type => "button", :value => "Cancelar" }