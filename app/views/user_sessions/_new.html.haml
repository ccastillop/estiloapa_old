- u_s = UserSession.new
- u_s.email = "Login: (email)"
- u_s.password = "clave"
- form_for u_s, :url => user_session_path do |f|
  = f.text_field :email, :onclick=>"this.value=''", :class => "email"
  = f.password_field :password, :onclick=>"this.value=''", :class => "password"
  = image_submit_tag 'boton_ok.png', :alt => "ok", :class => "boton"
  .recuerdame
    = f.check_box :remember_me
    = f.label :remember_me, "Recuérdeme"
    &nbsp; &nbsp;
    = link_to "¿Olvidó su clave?", new_password_reset_path
    &nbsp; &nbsp;
    = link_to "REGISTRESE", new_user_path, :style => "color:red"